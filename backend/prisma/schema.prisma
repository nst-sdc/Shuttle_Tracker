generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Bus {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  busNumber       String   @unique
  driverName      String
  currentLocation String
  status          String   @default("In Service")
  lastUpdated     DateTime @default(now())
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  password        String?  // Optional for Google users
  name            String?
  picture         String?
  role            String   @default("student") // student or driver
  busNumber       String?  // For drivers
  driverName      String?  // For drivers
  mobileNumber    String?  // For drivers
  currentLocation String?  // For drivers
  createdAt       DateTime @default(now())
}
